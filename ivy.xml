<?xml version="1.0" encoding="UTF-8"?>
<ivy-module 
	version="1.3" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://ant.apache.org/ivy/schemas/ivy.xsd">

  <info 
  	organisation="araneaframework" 
  	module="aranea-mvc" 
  	revision="${araneaframework.version}"
  	status="${araneaframework.status}">
  	<license name="APL 2.0" url="http://www.apache.org/licenses/LICENSE-2.0.html"/>
  	<ivyauthor name="Nikita Salnikov-Tarnovski" url="nikem@webmedia.ee"/>
  	<description homepage="http://www.araneaframework.org">
  		Aranea MVC web framework.
  	</description>
  </info>

  <configurations>
    <conf name="build" extends="runtime" description="Dependencies needed for building the project and running sample applications"/>
    <conf name="runtime"/>
    <conf name="spring" description="For using Spring dispatcher"/>
    <conf name="default" extends="runtime"/>
    <conf name="backend" extends="runtime"/>
    <conf name="core" extends="runtime"/>
    <conf name="framework" extends="runtime"/>
    <conf name="http" extends="runtime"/>
    <conf name="jsp" extends="runtime"/>
    <conf name="uilib" extends="runtime"/>
  </configurations>
  
  <publications>
     <artifact name="aranea" type="jar" conf="default"/>
     <artifact name="aranea-backend" type="jar" conf="backend"/>
     <artifact name="aranea-core" type="jar" conf="core"/>
     <artifact name="aranea-framework" type="jar" conf="framework"/>
     <artifact name="aranea-http" type="jar" conf="http"/>
     <artifact name="aranea-jsp" type="jar" conf="jsp"/>
     <artifact name="aranea-uilib" type="jar" conf="uilib"/>
     <artifact name="aranea-integration-spring" type="jar" conf="spring"/>
  </publications>

  <dependencies>
    <!-- "buildtime" -->
    <dependency org="checkstyle" name="checkstyle" rev="4.4" conf="build->master,runtime"/>
    <dependency org="taglibrarydoc" name="tlddoc" rev="1.3" conf="build->default"/>
    <dependency org="cobertura" name="cobertura" rev="1.7" conf="build->default"/>
    <dependency org="apache" name="commons-el" rev="1.0" conf="build->default"/>
    <dependency org="apache" name="commons-beanutils" rev="1.7.0" conf="build->default"/>
    <dependency org="junit" name="junit" rev="3+" conf="build->default"/>
    <dependency org="org.springframework" name="spring" rev="1.2.9+" conf="build->default"/>
    <dependency org="javax" name="j2ee" rev="1.4" conf="build->default"/>
    
    <!-- "required" -->
    <dependency org="apache" name="commons-collections" rev="3.2+" conf="runtime->default"/>
    <dependency org="apache" name="commons-lang" rev="2.3+" conf="runtime->default"/>
    <dependency org="apache" name="commons-fileupload" rev="1.2" conf="runtime->default"/>
    <dependency org="apache" name="commons-validator" rev="1.3.1" conf="runtime->default"/>
    <dependency org="apache" name="taglibs-standard" rev="1.1.2" conf="runtime->default"/>
    <dependency org="sun" name="jstl" rev="1.1.2" conf="runtime->default"/>
    
		<!-- "optional" -->
    <dependency org="net.iharder" name="base64" rev="1.0" conf="runtime->default"/>
    <dependency org="com.thoughtworks" name="xstream" rev="1.2" conf="runtime->default"/>

  </dependencies>

</ivy-module>
