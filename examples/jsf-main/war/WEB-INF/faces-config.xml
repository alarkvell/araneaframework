  <render-kit>
      <renderer>
          <component-family>javax.faces.Form</component-family>
          <renderer-type>AraneaFormRenderer</renderer-type>
          <renderer-class>org.araneaframework.integration.jsf.renderer.EmptyRenderer</renderer-class>
      </renderer>
  </render-kit>
  
</faces-config>
