<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="1.2" 
              xmlns="http://java.sun.com/xml/ns/javaee" 
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd">
    <!--application> 
        <view-handler>
            test.base.viewhandler.ViewHandlerDecorator
        </view-handler>
    </application> -->
	
  <!-- Tell Duke your name -->
  <navigation-rule>
    <from-view-id>/jsf/helloduke/greeting.jsp</from-view-id>
    <navigation-case>
      <from-outcome>success</from-outcome>
      <to-view-id>/jsf/helloduke/response.jsp</to-view-id>
    </navigation-case>
  </navigation-rule>

  <!-- Return to greeting page -->
  <navigation-rule>
    <from-view-id>/jsf/helloduke/response.jsp</from-view-id>
    <navigation-case>
      <from-outcome>success</from-outcome>
            <to-view-id>/jsf/helloduke/greeting.jsp</to-view-id>
    </navigation-case>
  </navigation-rule>
  <!-- components -->

  <component>
      <component-type>javax.faces.HtmlForm</component-type>
      <component-class>org.araneaframework.integration.jsf.components.AraneaJsfHtmlForm</component-class>
  </component>

