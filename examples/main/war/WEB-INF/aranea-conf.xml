<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<bean id="araneaApplicationStart"
		class="org.araneaframework.example.main.web.LoginWidget"
		singleton="false" />
  
  <bean class="org.araneaframework.servlet.filter.StandardServletMountFilterService" 
    id="araneaMountFilter" singleton="false">
    <property name="mounts">
      <map>
        <entry key="person">
          <bean class="org.araneaframework.example.main.message.ExamplePersonMountMessageFactory" singleton="false"/>
        </entry>
      </map>
    </property>
  </bean>  
</beans>
