<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>   
    <bean id="araneaApplicationStart" 
      class="org.araneaframework.example.main.web.LoginWidget"  
      singleton="false"/>
      
  <bean class="org.araneaframework.servlet.router.JGroupClusteredSessionRouterService" id="araneaSessionRouter"
        singleton="false">
    <property name="sessionServiceFactory" ref="araneaSessionServiceFactory"/>
  </bean>      
  
  <bean id="customSessionFilters" singleton="false"
      class="org.araneaframework.framework.filter.StandardServiceFilterChainFilterService">
    <property name="filterChain">     
      <list>
        <ref bean="araneaSerializingAudit"/>
      </list>
    </property>
  </bean>    
</beans>
