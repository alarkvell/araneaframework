<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC 
  "-//SPRING//DTD BEAN//EN" 
  "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
  <!-- 
    The application root widget.
   -->
  <bean id="araneaApplicationStart" 
    class="example.NameWidget"  
    singleton="false"/>	
    
   <bean class="org.araneaframework.framework.filter.StandardStatisticFilterService"
    id="araneaMainStatisticFilter" singleton="false">
    <property name="namespace" value="MYOWN"/>
  </bean>
  
  <bean id="customApplicationFilters" singleton="false"
    class="org.araneaframework.framework.filter.StandardServiceFilterChainFilterService">
    <property name="filterChain">     
      <list>
         <bean class="org.araneaframework.framework.filter.StandardStatisticFilterService"
          singleton="false">
          <property name="namespace" value="MAMBA NR.5"/>
        </bean>
      </list>
    </property>
  </bean> 
</beans>
